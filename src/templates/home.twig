{% extends "base.twig" %}

{% block title %}Home {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8 dashboard-main">
            {% for item in items %}
            <div class="dashboard-post">
                <h2 class="dashboard-post-title"><a href="/item/{{ item.GetId() }}">{{ item.GetName()|escape }}</a></h2>
                <p class="dashboard-post-meta">{{ item.GetCreated()|date("m/d/Y") }} by <a href="#">{{ item.GetUserId()|escape }}</a></p>

                <p>
                    {{ item.GetBody()|escape }}
                </p>
            </div><!-- /.dashboard-post -->
            {% endfor %}

            <nav class="dashboard-pagination">
                <a class="btn btn-outline-primary" href="#">Older</a>
                <a class="btn btn-outline-secondary disabled" href="#">Newer</a>
            </nav>

        </div><!-- /.dashboard-main -->

        <aside class="col-md-4 blog-sidebar">
            <div class="p-3 mb-3 bg-light rounded">
                <h4 class="font-italic">Section</h4>
                <p class="mb-0">Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur purus
                    sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
            </div>

            <div class="p-3">
                <h4 class="font-italic"></h4>
                <ol class="list-unstyled mb-0">
                    <li><a href="#">Events</a></li>
                    <li><a href="#">Logs</a></li>
                </ol>
            </div>
        </aside><!-- /.blog-sidebar -->
    </div><!-- /.row -->
{% endblock %}